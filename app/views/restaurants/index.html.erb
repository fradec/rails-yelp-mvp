<h2 class="text-center">Restaurants</h2>

<div class="my-5">
  <% @restaurants.each do |restaurant| %>
    <li class="list-group-item d-flex justify-content-between align-items-center"><%= link_to restaurant.name, restaurant_path(restaurant) %>
      <% count = 0 %>
      <% restaurant.reviews.each do |review| %>
        <% count += review.rating %>
      <% end %>
      <% if restaurant.reviews.length != 0 %>
        <span class="badge badge-primary badge-pill">
        <%= count / restaurant.reviews.length %> ⚝</span>
      <% end %>
    </li>
  <% end %>
</div>
