<h2 class="font-italic text-center"><%= @restaurant.name %></h2>

<h4>Address</h4>
<p><%= @restaurant.address %></p>

<h4>Phone number</h4>
<p><%= @restaurant.phone_number %></p>

<h4>Category</h4>
<p><%= @restaurant.category %></p>

<hr>

<h3>Reviews</h3>

<div class="my-3">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item d-flex justify-content-between align-items-center"><%= review.content %><span class="badge badge-primary badge-pill"><%= review.rating %></span></li>
  <% end %>
</div>

<hr>

<div class="my-3">
  <%= simple_form_for [@restaurant, @review] do |f| %>

    <%= f.input :content %>
    <%= f.input :rating %>

    <%= f.submit class: "btn btn-primary" %>

  <% end %>
</div>

